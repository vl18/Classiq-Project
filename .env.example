# --- Database ---
POSTGRES_USER=classiq
POSTGRES_PASSWORD=classiq
POSTGRES_DB=classiq_tasks
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://classiq:classiq@db:5432/classiq_tasks

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
DEFAULT_SHOTS=1024
MAX_QC_BYTES=2000000

# --- Worker ---
WORKER_CHANNEL=tasks_channel
WORKER_CLAIM_BATCH=32
WORKER_LEASE_SECONDS=120
WORKER_POLL_INTERVAL_SECONDS=10
WORKER_STALE_SWEEP_SECONDS=30
TASK_MAX_ATTEMPTS=3
TASK_RETRY_BASE_SECONDS=5
TASK_RETRY_MAX_SECONDS=300
METRICS_INTERVAL_SECONDS=15

# --- Logging ---
LOG_LEVEL=INFO
LOG_DIR=/var/log/app
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
